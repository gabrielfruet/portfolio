---
interface Props {
    title: string;
    authors: string[];
    venue: string;
    year: string;
    link?: string;
    abstract?: string;
}

const { title, authors, venue, year, link, abstract } = Astro.props;
---

<div class="border-b border-neutral-800 py-8 first:pt-0 last:border-0 group">
    <div class="flex flex-col gap-2">
        <div class="flex justify-between items-start gap-4">
            <h3
                class="font-medium text-lg text-white group-hover:text-blue-400 transition-colors leading-tight"
            >
                {title}
            </h3>
            {
                link && (
                    <a
                        href={link}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-neutral-500 hover:text-white transition-colors whitespace-nowrap font-mono text-sm"
                    >
                        [PDF] â†—
                    </a>
                )
            }
        </div>

        <div class="text-neutral-400 text-sm">
            {authors.join(", ")}
        </div>

        <div
            class="flex items-center gap-3 text-xs font-mono text-neutral-500 mt-1"
        >
            <span class="bg-neutral-900 px-2 py-1 rounded text-neutral-300"
                >{venue}</span
            >
            <span>{year}</span>
        </div>

        {
            abstract && (
                <p class="text-neutral-500 text-sm mt-3 leading-relaxed">
                    {abstract}
                </p>
            )
        }
    </div>
</div>
