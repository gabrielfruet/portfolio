---
interface Props {
  title: string;
  description: string;
  tech: string[];
  link?: string;
  image?: string;
}

const { title, description, tech, link, image } = Astro.props;
---

<div
  class="border border-neutral-800 p-6 hover:border-neutral-600 transition-colors duration-300 group"
>
  <div class="flex justify-between items-start mb-4">
    <h3
      class="font-mono text-lg font-medium text-white group-hover:text-blue-400 transition-colors"
    >
      {title}
    </h3>
    {
      link && (
        <a
          href={link}
          target="_blank"
          rel="noopener noreferrer"
          class="text-neutral-500 hover:text-white transition-colors"
        >
          â†—
        </a>
      )
    }
  </div>

  <p class="text-neutral-400 mb-6 text-sm leading-relaxed">
    {description}
  </p>

  {image && <img src={image} alt={title} class="w-full h-auto mb-6 rounded" />}

  <div class="flex flex-wrap gap-2">
    {
      tech.map((t) => (
        <span class="text-xs font-mono text-neutral-500 bg-neutral-900 px-2 py-1 rounded">
          {t}
        </span>
      ))
    }
  </div>
</div>
